<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btnVsCpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play vs CPU"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btnLocalMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Player Local"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btnOnlineMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online Multiplayer"
        android:layout_margin="8dp"/>
<TextView
    android:id="@+id/tvPlayerName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello, Player"
    android:textSize="18sp"/>

<Button
    android:id="@+id/btnShareCode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Share Code"/>

</LinearLayout>